    <script>
        // ===== ì „ì—­ ìƒíƒœ ê´€ë¦¬ =====
        window.OneAIApp = {
            currentPage: 'home',
            user: null,
            isAuthenticated: false,
            
            // ì´ˆê¸°í™”
            init() {
                this.checkAuth();
                this.setupEventListeners();
                this.loadInitialPage();
            },
            
            // ì¸ì¦ í™•ì¸
            checkAuth() {
                const token = localStorage.getItem('oneai_token');
                const userData = localStorage.getItem('oneai_user');
                
                if (token && userData) {
                    this.user = JSON.parse(userData);
                    this.isAuthenticated = true;
                    this.updateUserUI();
                } else {
                    this.isAuthenticated = false;
                    this.updateLoginUI();
                }
            },
            
            // ì‚¬ìš©ì UI ì—…ë°ì´íŠ¸
            updateUserUI() {
                const userProfile = document.getElementById('userProfile');
                const userAvatar = document.getElementById('userAvatar');
                const userName = document.getElementById('userName');
                const userStatus = document.getElementById('userStatus');
                const loginButton = document.getElementById('loginButton');
                const logoutButton = document.getElementById('logoutButton');
                
                if (this.user) {
                    userProfile.style.display = 'flex';
                    loginButton.style.display = 'none';
                    logoutButton.style.display = 'inline-flex';
                    
                    userAvatar.textContent = this.user.name ? this.user.name.charAt(0).toUpperCase() : 'U';
                    userName.textContent = this.user.name || 'ì‚¬ìš©ì';
                    userStatus.textContent = 'ì˜¨ë¼ì¸';
                    
                    // í”„ë¡œí•„ í˜ì´ì§€ ì •ë³´ ì—…ë°ì´íŠ¸
                    const profileElements = document.querySelectorAll('[data-user-info]');
                    profileElements.forEach(element => {
                        const field = element.getAttribute('data-user-info');
                        element.textContent = this.user[field] || '';
                    });
                }
            },
            
            // ë¡œê·¸ì¸ UI ì—…ë°ì´íŠ¸
            updateLoginUI() {
                const userProfile = document.getElementById('userProfile');
                const loginButton = document.getElementById('loginButton');
                const logoutButton = document.getElementById('logoutButton');
                
                userProfile.style.display = 'none';
                loginButton.style.display = 'inline-flex';
                logoutButton.style.display = 'none';
            },
            
            // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì„¤ì •
            setupEventListeners() {
                // ë’¤ë¡œê°€ê¸°/ì•ìœ¼ë¡œê°€ê¸° ì²˜ë¦¬
                window.addEventListener('popstate', (event) => {
                    const page = event.state?.page || 'home';
                    this.showPage(page, false);
                });
                
                // í‚¤ë³´ë“œ ë‹¨ì¶•í‚¤
                document.addEventListener('keydown', (event) => {
                    if (event.ctrlKey || event.metaKey) {
                        switch(event.key) {
                            case '1':
                                event.preventDefault();
                                this.navigateTo('home');
                                break;
                            case '2':
                                event.preventDefault();
                                this.navigateTo('business');
                                break;
                            case '3':
                                event.preventDefault();
                                this.navigateTo('healthcare');
                                break;
                            case '4':
                                event.preventDefault();
                                this.navigateTo('community');
                                break;
                            case '5':
                                event.preventDefault();
                                this.navigateTo('sharing');
                                break;
                        }
                    }
                });
            },
            
            // ì´ˆê¸° í˜ì´ì§€ ë¡œë“œ
            loadInitialPage() {
                const hash = window.location.hash.slice(1);
                const page = hash || 'home';
                this.showPage(page, false);
            },
            
            // í˜ì´ì§€ ë„¤ë¹„ê²Œì´ì…˜
            navigateTo(page) {
                this.showPage(page, true);
            },
            
            // í˜ì´ì§€ í‘œì‹œ
            showPage(page, updateHistory = true) {
                // ì¸ì¦ì´ í•„ìš”í•œ í˜ì´ì§€ ì²´í¬
                const authRequiredPages = ['profile', 'business', 'healthcare', 'community', 'sharing'];
                if (authRequiredPages.includes(page) && !this.isAuthenticated) {
                    this.showPage('login', updateHistory);
                    return;
                }
                
                // í˜„ì¬ í™œì„± í˜ì´ì§€ ìˆ¨ê¸°ê¸°
                const currentPage = document.querySelector('.page.active');
                if (currentPage) {
                    currentPage.classList.remove('active');
                }
                
                // ìƒˆ í˜ì´ì§€ í‘œì‹œ
                const newPage = document.getElementById(page + 'Page');
                if (newPage) {
                    newPage.classList.add('active');
                    this.currentPage = page;
                    
                    // ë„¤ë¹„ê²Œì´ì…˜ íƒ­ ì—…ë°ì´íŠ¸
                    this.updateNavTabs(page);
                    
                    // ë¸Œë¼ìš°ì € íˆìŠ¤í† ë¦¬ ì—…ë°ì´íŠ¸
                    if (updateHistory) {
                        const url = page === 'home' ? '/' : `/#${page}`;
                        history.pushState({ page }, '', url);
                    }
                    
                    // í˜ì´ì§€ë³„ ì´ˆê¸°í™”
                    this.initPage(page);
                }
            },
            
            // ë„¤ë¹„ê²Œì´ì…˜ íƒ­ ì—…ë°ì´íŠ¸
            updateNavTabs(page) {
                const tabs = document.querySelectorAll('.nav-tab');
                tabs.forEach(tab => {
                    tab.classList.remove('active');
                    if (tab.getAttribute('data-page') === page) {
                        tab.classList.add('active');
                    }
                });
            },
            
            // í˜ì´ì§€ë³„ ì´ˆê¸°í™”
            initPage(page) {
                switch(page) {
                    case 'home':
                        this.initHomePage();
                        break;
                    case 'business':
                        this.initBusinessPage();
